<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Paytm_login">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/paytm_logo" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="India's most sincere bank"
        android:layout_marginStart="24dp"
        android:layout_marginTop="62dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Login to your Paytm Payments Bank Saving Account"
        android:layout_marginTop="200dp"
        android:layout_marginStart="49dp"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:text="Register Mobile Number"
        android:layout_marginTop="300dp"
        android:layout_marginStart="49dp"
        />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textSize="20dp"
        android:inputType="phone"
        android:textStyle="bold"
        android:layout_marginStart="49dp"
        android:layout_marginTop="330dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16dp"
        android:text="Enter Passcode"
        android:layout_marginTop="390dp"
        android:layout_marginStart="49dp"/>

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textStyle="bold"
        android:textSize="20dp"
        android:inputType="textPassword"
        android:layout_marginTop="430dp"
        android:layout_marginStart="49dp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="Login Securely"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:background="@color/lightblue"
        android:layout_marginTop="500dp"
        android:layout_marginStart="49dp"/>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/lightblue"
        android:layout_marginTop="600dp"
        android:layout_marginStart="130dp"/>

   <android.support.design.widget.BottomNavigationView
       android:id="@+id/nav"
       android:layout_width="match_parent"
       android:layout_height="65dp"
       android:layout_alignParentBottom="true"
       android:layout_alignParentStart="true"
       app:menu="@menu/bottom_nav">

   </android.support.design.widget.BottomNavigationView>



</RelativeLayout>
